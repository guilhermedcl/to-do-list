    "eslint": "^7.32.0",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "mongodb-memory-server": "^9.3.0",
    "mongoose": "^7.2.0",
    "supertest": "^7.0.0"
  }
}
